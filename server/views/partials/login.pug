extends ../layout.pug

block content
    .container
        section#login-wrapper
            .content
                img.center-block.animated.fadeIn.animation-delay-500ms(class="kp-logo", src="/assets/svgs/logo-brand-color.svg")
                h2.text-center.animated.fadeInUp.animation-delay-1000ms
                    span Key
                    span Punchers
                    span .io

                h4.text-center.animated.fadeInUp.animation-delay-1500ms.page-header(style="margin-top: 0;") Chose a provider
                ul.animated.fadeInUp.animation-delay-2000ms
                    li
                        a(href="/auth/github")
                            i.fa.fa-2x.fa-github
                    li
                        a(href="/auth/reddit")
                            i.fa.fa-2x.fa-reddit
                    li
                        a(href="/auth/twitter")
                            i.fa.fa-2x.fa-twitter
                    li
                        a(href="/auth/google")
                            i.fa.fa-2x.fa-google-plus